							<a class="selected" href="/admin/rsvp">RSVP</a>
						{{else}}
							<a href="/admin/rsvp">RSVP</a>
						{{/ifCond}}
					</li>
					<li>
						{{#ifCond currentPage 'poll'}}
							<a class="selected" href="/admin/poll">Poll</a>
						{{else}}
							<a href="/admin/poll">Poll</a>
						{{/ifCond}}
					</li>
					<li>
						<a class="button small round" href="/admin/logout">Log Out</a>
					</li>		
				</ul>
		
			</div>
	
		</div>
