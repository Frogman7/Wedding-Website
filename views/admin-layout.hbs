	<footer>
		<div class="row">
	
			<div class="large-9 small-9 columns">
		
				<h3>YOU ARE AWESOME!</h3>	
		
				<p id="copyright">
					&copy; {{year}} Shea Daniels
				</p>
		
			</div>
			
			<div class="large-3 small-3 columns">
				<div class="tiki">
					<img src="/images/tiki.png" alt="" />
				</div>
			</div>			
			
		</div>
	</footer>

